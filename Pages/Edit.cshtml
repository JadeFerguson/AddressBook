@page
@model AddressBook.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserAddressBook.Id" />
            <div class="form-group">
                <label asp-for="UserAddressBook.FirstName" class="control-label">First Name</label>
                <input asp-for="UserAddressBook.FirstName" class="form-control" />
                <span asp-validation-for="UserAddressBook.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAddressBook.LastName" class="control-label">Last Name</label>
                <input asp-for="UserAddressBook.LastName" class="form-control" />
                <span asp-validation-for="UserAddressBook.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAddressBook.StreetAddress" class="control-label">Street Address</label>
                <input asp-for="UserAddressBook.StreetAddress" class="form-control" />
                <span asp-validation-for="UserAddressBook.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAddressBook.ZipCode" class="control-label">Zip Code</label>
                <input asp-for="UserAddressBook.ZipCode" class="form-control" />
                <span asp-validation-for="UserAddressBook.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAddressBook.State" class="control-label">State</label>
                <input asp-for="UserAddressBook.State" class="form-control" />
                <span asp-validation-for="UserAddressBook.State" class="text-danger"></span>
            </div>
            <div class="form-group pt-1">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="pt-1">
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
